<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/badge_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_detail_hanzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail_pinyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="zì"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/red_tone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_hanzi" />

    <TextView
        android:id="@+id/tv_detail_indo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ce (seperti 'cepat')"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_pinyin" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_indo" />

    <TextView
        android:id="@+id/tv_label_arti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ARTINYA"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/tv_detail_arti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karakter / Huruf"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_arti" />

    <TextView
        android:id="@+id/tv_label_contoh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CONTOH KALIMAT"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_arti" />

    <TextView
        android:id="@+id/tv_detail_contoh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wo xuexi hanzi."
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_contoh" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_contoh" />

</androidx.constraintlayout.widget.ConstraintLayout>
